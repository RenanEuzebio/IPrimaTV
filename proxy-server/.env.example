# Server Configuration
PORT=3000
HOST=0.0.0.0

# Set to true if behind Nginx or another reverse proxy
TRUST_PROXY=true

# Optional API key for authentication
# Leave empty to disable API key requirement
API_KEY=

# CORS Configuration
# Set to your GitHub Pages URL in production, e.g., https://yourusername.github.io
# Use "*" to allow all origins (less secure)
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Stream-specific limits
MAX_CONCURRENT_STREAMS=10
MAX_STREAM_DURATION=3600000

# Proxy Rotation (IP Anonymization)
PROXY_ROTATION_ENABLED=false

# Comma-separated list of SOCKS5/HTTP proxies
# Formats: socks5://host:port, socks5://user:pass@host:port, http://host:port
# Example: socks5://127.0.0.1:9050,http://proxy.example.com:8080
PROXY_LIST=

# Rotation strategy: "round-robin" or "random"
ROTATION_STRATEGY=round-robin

# Anonymity Features
STRIP_HEADERS=true
ROTATE_USER_AGENT=true
ADD_RANDOM_DELAY=false

# Logging
LOGGING_ENABLED=true
LOG_LEVEL=combined

# Security - URL Filtering (comma-separated patterns)
# Leave empty to allow all URLs
ALLOWED_URL_PATTERNS=
BLOCKED_URL_PATTERNS=

# ============================================
# PRODUCTION DEPLOYMENT EXAMPLES
# ============================================

# Example 1: Simple deployment without proxy rotation
# PORT=3000
# CORS_ORIGIN=https://yourusername.github.io
# API_KEY=your-secret-key-here
# PROXY_ROTATION_ENABLED=false

# Example 2: With Tor SOCKS5 proxy
# PORT=3000
# CORS_ORIGIN=https://yourusername.github.io
# PROXY_ROTATION_ENABLED=true
# PROXY_LIST=socks5://127.0.0.1:9050
# ROTATION_STRATEGY=round-robin

# Example 3: Multiple HTTP proxies with rotation
# PORT=3000
# CORS_ORIGIN=https://yourusername.github.io
# PROXY_ROTATION_ENABLED=true
# PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080,socks5://proxy3.example.com:1080
# ROTATION_STRATEGY=random

# Example 4: Behind Nginx with SSL (recommended for production)
# PORT=3000
# HOST=127.0.0.1
# TRUST_PROXY=true
# CORS_ORIGIN=https://yourusername.github.io
# API_KEY=your-secret-key-here
# PROXY_ROTATION_ENABLED=true
# PROXY_LIST=socks5://127.0.0.1:9050
